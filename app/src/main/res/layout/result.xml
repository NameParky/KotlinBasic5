<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/crab"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/singledayregular"
                    android:textSize="25dp"
                    android:text="어이 징징이들!! 정산하자구!!"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cerulean"/>


            <TextView
                android:id="@+id/resHeadCount"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 인원 : 명"
                android:textSize="25dp"
                android:fontFamily="@font/singledayregular"/>

            <TextView
                android:id="@+id/resOverallPrice"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 가격 : 원"
                android:textSize="25dp"
                android:fontFamily="@font/singledayregular"/>

            <TextView
                android:id="@+id/resIndPrice"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인당 금액 : 원"
                android:fontFamily="@font/singledayregular"
                android:textSize="25dp"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가 금액 : "
                    android:fontFamily="@font/singledayregular"
                    android:textSize="25dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/addPrice1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="없음"
                        android:fontFamily="@font/singledayregular"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/addPrice2"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="종영 / 프로틴 / 54000원"
                        android:visibility="gone"
                        android:fontFamily="@font/singledayregular"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/addPrice3"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="종영 / 프로틴 / 54000원"
                        android:visibility="gone"
                        android:fontFamily="@font/singledayregular"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/addPrice4"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="종영 / 프로틴 / 54000원"
                        android:visibility="gone"
                        android:fontFamily="@font/singledayregular"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/addPrice5"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="종영 / 프로틴 / 54000원"
                        android:visibility="gone"
                        android:fontFamily="@font/singledayregular"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/addPrice6"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="종영 / 프로틴 / 54000원"
                        android:visibility="gone"
                        android:fontFamily="@font/singledayregular"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/addPrice7"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="종영 / 프로틴 / 54000원"
                        android:visibility="gone"
                        android:fontFamily="@font/singledayregular"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/addPrice8"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="종영 / 프로틴 / 54000원"
                        android:visibility="gone"
                        android:fontFamily="@font/singledayregular"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/addPrice9"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="종영 / 프로틴 / 54000원"
                        android:visibility="gone"
                        android:fontFamily="@font/singledayregular"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/addPrice10"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="종영 / 프로틴 / 54000원"
                        android:visibility="gone"
                        android:fontFamily="@font/singledayregular"
                        android:textSize="20dp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영수증 : "
                android:fontFamily="@font/singledayregular"
                android:textSize="25dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/resBill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="300dp"
                    android:maxHeight="600dp"
                    android:src="@drawable/bill"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>